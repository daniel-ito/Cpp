int main() {
  
  int i, x; 
  int div = 0;
  
  	do
	{
	cout << "Digite um numero inteiro e positivo: ";
	cin >> x;
  	}
	while (x <= 0);
  
	for (i = 1; i <= x; i++)
	{
	if (x % i == 0)
		{ 
			div++;
    	}
  	}
    
 	 if (div == 2)
  		{
		cout <<"O numero Ã© primo!" << x;
		}  
	else
		{
   		 cout <<"O numero nao e primo"<< x;
		}

	return 0;
}
